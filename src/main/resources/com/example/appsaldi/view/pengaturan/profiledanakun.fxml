<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="565.0" prefWidth="900.0" stylesheets="@../../css/theme-light.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.appsaldi.controller.pengaturan.ProfileAkunController">

   <children>
      <Label prefHeight="30.0" prefWidth="200.0" styleClass="title" text="Profile &amp; Akun" />

      <Label styleClass="text-regular" text="Nama Lengkap">
         <VBox.margin><Insets bottom="5.0" top="20.0" /></VBox.margin>
      </Label>
      <TextField fx:id="txtNama" prefHeight="25.0" prefWidth="408.0" />

      <Label styleClass="text-regular" text="Username">
         <VBox.margin><Insets bottom="5.0" top="10.0" /></VBox.margin>
      </Label>
      <TextField fx:id="txtUserName" prefWidth="408.0" />

      <Label styleClass="text-regular" text="Kata Sandi">
         <VBox.margin><Insets bottom="5.0" top="10.0" /></VBox.margin>
      </Label>
      <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="408.0">
         <children>
            <TextField fx:id="txtKataSandi" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>

      <Label styleClass="text-regular" text="Foto Profile">
         <VBox.margin><Insets bottom="5.0" top="10.0" /></VBox.margin>
      </Label>
      <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="200.0">
         <children>
            <TextField fx:id="txtPathFotoProfile" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnEditFotoProfile" mnemonicParsing="false" styleClass="colored-button" text="Edit Foto Profile">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Button>
         </children>
      </HBox>

      <Button fx:id="btnSimpanPerubahan" contentDisplay="RIGHT" mnemonicParsing="false" prefHeight="35.0" prefWidth="408.0" styleClass="colored-button" text=" Simpan Perubahan">
         <VBox.margin><Insets top="25.0" /></VBox.margin>
      </Button>
   </children>

   <padding>
      <Insets bottom="20.0" left="25.0" right="500.0" top="10.0" />
   </padding>
</VBox>
